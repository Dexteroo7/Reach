<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/darkgrey"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="60dp" >
        <ImageView
            android:id="@+id/closeIcon"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/close_button"
            android:layout_marginRight="20dp"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/headText"
            android:layout_toRightOf="@id/closeIcon"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="My Files"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#42353e"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1.5dp" />
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/downloadRefresh"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_weight="0.72"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/queueListView"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="0.28"
        android:clickable="true"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/playerButtons"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/shuffleBtn"
                android:src="@drawable/shuffle_selector"
                android:layout_marginRight="20dp"
                android:padding="12dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/rwdBtn"
                android:src="@drawable/rwd_selector"
                android:layout_marginRight="5dp"
                android:padding="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/playBtn"
                android:src="@drawable/play_white_selector"
                android:layout_marginRight="5dp"
                android:padding="6dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/fwdBtn"
                android:src="@drawable/fwd_selector"
                android:padding="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <ImageView
                android:id="@+id/repeatBtn"
                android:src="@drawable/repeat_selector"
                android:layout_marginLeft="20dp"
                android:padding="12dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_above="@id/playerButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/songTitle"
                android:text="Song Title"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/artistName"
                android:text="Artist Name"
                android:textColor="#cccccc"
                android:textSize="15sp"
                android:layout_below="@id/songTitle"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <SeekBar
                android:id="@+id/playerProgress"
                android:layout_below="@id/artistName"
                android:layout_marginRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumb="@drawable/thumb"
                android:thumbOffset="5dp"
                android:progressDrawable="@drawable/player_progressbar" />
            <TextView
                android:id="@+id/playerPos"
                android:text="00:00"
                android:textSize="12sp"
                android:layout_below="@id/playerProgress"
                android:layout_alignLeft="@id/playerProgress"
                android:textColor="#cccccc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/songDuration"
                android:layout_below="@id/playerProgress"
                android:layout_alignRight="@id/playerProgress"
                android:text="00:00"
                android:textSize="12sp"
                android:textColor="#cccccc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/likeBtn"
                android:visibility="visible"
                android:src="@drawable/like_white"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/songTitle"
                android:padding="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:id="@+id/player"
            android:background="@drawable/border_shadow_black" >
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:src="@drawable/play_white_selector"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/pause_play"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/songNamePlaying"
                android:text="Click to open your Song Collection"
                android:textSize="16sp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/pause_play"
                android:textColor="@color/white"
                android:maxLines="1"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/progressBar"
                android:layout_below="@id/songNamePlaying"
                android:layout_toLeftOf="@id/pause_play"
                android:thumbOffset="5dp"
                android:thumb="@drawable/thumb"
                android:progressDrawable="@drawable/player_progressbar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>