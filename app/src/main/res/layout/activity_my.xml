<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".core.MyActivity">
    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:minHeight="?attr/actionBarSize"
                android:background="?attr/colorPrimary" />
        </android.support.design.widget.AppBarLayout>
        <FrameLayout
            android:id="@+id/containerFrame"
            android:layout_width="match_parent"
            android:paddingTop="?attr/actionBarSize"
            android:layout_height="match_parent">
            <com.sothree.slidinguppanel.SlidingUpPanelLayout
                xmlns:sothree="http://schemas.android.com/apk/res-auto"
                android:id="@+id/sliding_layout"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                sothree:umanoPanelHeight="63dp"
                android:gravity="bottom"
                sothree:umanoOverlay="true"
                sothree:umanoDragView="@+id/player"
                sothree:umanoShadowHeight="0dp">
                <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <View
                        android:id="@+id/playerShadow"
                        android:background="@drawable/shadow_top"
                        android:layout_width="match_parent"
                        android:layout_height="3dp" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/fullPlayer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <android.support.v4.widget.SwipeRefreshLayout
                                android:id="@+id/downloadRefresh"
                                android:layout_width="match_parent"
                                android:background="@color/white"
                                android:layout_weight="0.7"
                                android:layout_height="0dp">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ListView
                                        android:id="@+id/queueListView"
                                        android:divider="@null"
                                        android:dividerHeight="0dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                    <View
                                        android:id="@+id/fullPlayerShadow"
                                        android:layout_gravity="bottom"
                                        android:background="@drawable/shadow_top"
                                        android:layout_width="match_parent"
                                        android:layout_height="3dp" />
                                </FrameLayout>
                            </android.support.v4.widget.SwipeRefreshLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:background="@color/reach_grey"
                                android:clickable="true"
                                android:layout_weight="0.3"
                                android:layout_height="0dp">
                                <LinearLayout
                                    android:id="@+id/playerButtons"
                                    android:orientation="horizontal"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp">
                                    <ImageView
                                        android:id="@+id/shuffleBtn"
                                        android:src="@drawable/shuffle_selector"
                                        android:layout_marginRight="10dp"
                                        android:padding="12dp"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp" />
                                    <ImageView
                                        android:id="@+id/rwdBtn"
                                        android:src="@drawable/rwd_selector"
                                        android:padding="10dp"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp" />
                                    <ImageView
                                        android:id="@+id/playBtn"
                                        android:src="@drawable/play_white_selector"
                                        android:padding="6dp"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp" />
                                    <ImageView
                                        android:id="@+id/fwdBtn"
                                        android:src="@drawable/fwd_selector"
                                        android:padding="10dp"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp" />
                                    <ImageView
                                        android:id="@+id/repeatBtn"
                                        android:src="@drawable/repeat_selector"
                                        android:layout_marginLeft="10dp"
                                        android:padding="12dp"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp" />
                                </LinearLayout>
                                <RelativeLayout
                                    android:layout_above="@id/playerButtons"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/songTitle"
                                        android:text="Song Title"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:layout_marginLeft="40dp"
                                        android:layout_marginRight="40dp"
                                        android:singleLine="true"
                                        android:ellipsize="marquee"
                                        android:layout_centerHorizontal="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:id="@+id/artistName"
                                        android:text="Artist Name"
                                        android:textColor="@color/white"
                                        android:textSize="15sp"
                                        android:layout_below="@id/songTitle"
                                        android:layout_marginLeft="40dp"
                                        android:layout_marginRight="40dp"
                                        android:singleLine="true"
                                        android:ellipsize="marquee"
                                        android:layout_marginBottom="5dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <SeekBar
                                        android:id="@+id/playerProgress"
                                        android:layout_below="@id/artistName"
                                        android:layout_marginRight="20dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:thumb="@drawable/thumb"
                                        android:thumbOffset="5dp"
                                        android:progressDrawable="@drawable/player_progressbar" />
                                    <TextView
                                        android:id="@+id/playerPos"
                                        android:text="00:00"
                                        android:textSize="12sp"
                                        android:layout_below="@id/playerProgress"
                                        android:layout_alignLeft="@id/playerProgress"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:id="@+id/songDuration"
                                        android:layout_below="@id/playerProgress"
                                        android:layout_alignRight="@id/playerProgress"
                                        android:text="00:00"
                                        android:textSize="12sp"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <ImageView
                                        android:id="@+id/likeBtn"
                                        android:visibility="gone"
                                        android:src="@drawable/like_white"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignTop="@id/songTitle"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="top"
                            android:id="@id/player"
                            android:background="@color/reach_grey" >
                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                android:padding="7dp"
                                android:src="@drawable/play_white_selector"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:id="@+id/pause_play"/>
                            <ImageView
                                android:id="@+id/albumArt"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_width="60dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/song_cover_icon"
                                android:layout_height="60dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:id="@+id/songNamePlaying"
                                android:layout_marginLeft="10dp"
                                android:text="Click to open Song Collection"
                                android:textSize="16sp"
                                android:layout_toRightOf="@id/albumArt"
                                android:layout_toLeftOf="@id/pause_play"
                                android:textColor="@color/white"
                                android:maxLines="1"/>
                            <SeekBar
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:id="@+id/progressBar"
                                android:layout_below="@id/songNamePlaying"
                                android:layout_toRightOf="@id/albumArt"
                                android:layout_toLeftOf="@id/pause_play"
                                android:thumbOffset="5dp"
                                android:thumb="@drawable/thumb"
                                android:progressDrawable="@drawable/player_progressbar"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                        </RelativeLayout>
                    </FrameLayout>
                </LinearLayout>
            </com.sothree.slidinguppanel.SlidingUpPanelLayout>
            <View
                android:id="@+id/mainShadow"
                android:layout_gravity="top"
                android:background="@drawable/shadow_toolbar"
                android:layout_width="match_parent"
                android:layout_height="3dp" />
        </FrameLayout>
    </android.support.design.widget.CoordinatorLayout>
    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_draw_menu">
        <FrameLayout
            android:id="@+id/footer"
            android:background="@null"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <View
                android:id="@+id/rateShadow"
                android:layout_marginTop="17dp"
                android:background="@drawable/shadow_top"
                android:layout_width="match_parent"
                android:layout_height="3dp" />
            <TextView
                android:text="Rate our App !"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/reach_color"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <View
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circular_background_pink"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/star"
                android:layout_width="25dp"
                android:layout_height="25dp" />
        </FrameLayout>
    </android.support.design.widget.NavigationView>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:id="@+id/notification_view"
        android:layout_height="match_parent"
        android:layout_gravity="right">
        <LinearLayout
            android:id="@+id/notification_drawer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.TabLayout
                android:id="@+id/sliding_tabs"
                android:background="@color/reach_color"
                app:tabMode="fixed"
                app:tabBackground="@color/reach_color"
                app:tabTextColor="@color/white"
                app:tabSelectedTextColor="@color/white"
                app:tabIndicatorColor="@color/white"
                app:tabGravity="fill"
                style="@style/MyCustomTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/shadow_bottom"/>
            <reach.project.viewHelpers.CustomViewPager
                android:id="@+id/viewPager"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp" />
        </LinearLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>