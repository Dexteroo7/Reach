<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TabLayout
            android:id="@+id/sliding_tabs"
            android:background="@color/reach_color"
            app:tabMode="scrollable"
            app:tabBackground="@color/reach_color"
            app:tabTextColor="@color/white"
            app:tabSelectedTextColor="@color/white"
            app:tabIndicatorColor="@color/white"
            app:tabPaddingStart="25dp"
            app:tabPaddingEnd="25dp"
            app:tabGravity="fill"
            style="@style/MyCustomTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/shadow_bottom"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp" />
    </LinearLayout>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/right_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        fab:fab_addButtonColorNormal="@color/reach_color"
        fab:fab_addButtonColorPressed="@color/reach_color"
        fab:fab_addButtonPlusIconColor="@color/white"
        fab:fab_labelStyle="@style/menu_labels_style">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/share_music_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/reach_color"
            fab:fab_colorPressed="@color/reach_color"
            fab:fab_icon="@drawable/ic_share_white"
            fab:fab_title="Share Music" />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/invite_friend_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/reach_color"
            fab:fab_colorPressed="@color/reach_color"
            fab:fab_icon="@drawable/icon_invite_white"
            fab:fab_title="Invite a Friend" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</FrameLayout>