<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="reach.project.player.PlayerActivity">
    <include
        app:layout_heightPercent="40%"
        android:layout_width="match_parent"
        layout="@layout/header_yourprofile" />
    <android.support.v7.widget.CardView
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp"
        app:layout_marginTopPercent="34%"
        app:layout_marginRightPercent="5%"
        app:layout_marginLeftPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/reach_grey_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/scanProgress"
                    android:layout_margin="10dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/circle_loading"
                    android:progress="0"
                    android:layout_centerInParent="true"
                    android:secondaryProgress="100"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/scanCount"
                        android:text="0"
                        android:textSize="36sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="FILES FOUND"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/text1"
                android:text="SEARCHING YOUR PHONE"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text2"
                android:text="Please wait while we search your phone for songs, apps and photos"
                android:textColor="@color/reach_blue"
                android:gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/reach_grey_light"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp" />
            <TextView
                android:id="@+id/sendButton"
                android:textStyle="bold"
                android:padding="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:visibility="invisible"
                android:text="ORGANIZE"
                android:textColor="@color/reach_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.percent.PercentRelativeLayout>