<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="reach.project.player.PlayerActivity">
    <include
        app:layout_heightPercent="40%"
        android:layout_width="match_parent"
        layout="@layout/header_yourprofile" />

    <android.support.v7.widget.CardView
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp"
        app:layout_marginTopPercent="34%"
        app:layout_marginRightPercent="5%"
        app:layout_marginLeftPercent="5%"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            >

            <ProgressBar
                android:id="@+id/indeterminateProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminate="true"
                android:layout_alignParentBottom="true"
                android:padding="0dp"
                android:layout_marginBottom="-8dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/sendButton"
                android:textStyle="bold"
                android:padding="15dp"
                android:gravity="center"
                android:background="@null"
                android:textSize="16sp"
                android:layout_alignParentBottom="true"
                android:visibility="visible"
                android:text="Setting up your Profile..."
                android:textColor="@color/reach_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/divider"
                android:layout_above="@id/sendButton"
                android:background="@color/reach_grey_light"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp" />
            <FrameLayout
                android:id="@+id/frame1"
                android:layout_above="@id/divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/scan1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text1"
                        android:text="Almost there!"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:background="@null"
                        android:layout_margin="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text2"
                        android:text="Please wait while we search your phone for songs and apps"
                        android:textColor="@color/reach_blue"
                        android:gravity="center"
                        android:background="@null"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/scan2"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        >
                        <TextView
                            android:id="@+id/totalSongs"
                            android:text="0"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/reach_grey"
                            android:textSize="36sp"
                            android:background="@null"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/songIcon"
                            android:layout_below="@id/totalSongs"
                            android:src="@drawable/icon_song_indicator_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            />
                        <TextView
                            android:text="songs"
                            android:layout_toRightOf="@id/songIcon"
                            android:layout_alignBottom="@id/songIcon"
                            android:textColor="@color/reach_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            />
                    </RelativeLayout>
                    <View
                        android:background="@color/reach_grey"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_width="0.1dp"
                        android:layout_height="50dp" />
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/totalApps"
                            android:text="0"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/reach_grey"
                            android:textSize="36sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:id="@+id/appIcon"
                            android:layout_below="@id/totalApps"
                            android:src="@drawable/icon_apps_indicator_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_toRightOf="@id/appIcon"
                            android:layout_alignBottom="@id/appIcon"
                            android:text="apps"
                            android:textColor="@color/reach_grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </FrameLayout>
            <RelativeLayout
                android:background="@color/reach_grey_bg"
                android:layout_above="@id/frame1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/scanProgress"
                    android:layout_margin="10dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/circle_loading"
                    android:progress="1"
                    android:layout_centerInParent="true"
                    android:secondaryProgress="100"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@null"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/scanCount"
                        android:text="0"
                        android:textColor="@color/reach_grey"
                        android:textSize="32sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        />
                    <TextView
                        android:text="FILES FOUND"
                        android:textSize="12sp"
                        android:textColor="@color/reach_grey"
                        android:layout_width="wrap_content"
                        android:background="@null"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.percent.PercentRelativeLayout>