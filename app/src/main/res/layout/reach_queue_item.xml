<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <ImageView
        android:id="@+id/albumArt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:padding="15dp"
        android:background="@drawable/circular_background_pink"
        android:src="@drawable/music_note"/>
    <LinearLayout
        android:layout_alignTop="@id/albumArt"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:id="@+id/progressContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_played"
                android:layout_marginBottom="2dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/songSize"
                android:textColor="@color/reach_blue"
                android:maxLines="1"
                android:text="99%"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/songTitle"
        android:layout_alignTop="@id/albumArt"
        android:layout_toRightOf="@id/albumArt"
        android:layout_toLeftOf="@id/progressContainer"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:text="Title"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/from"
        android:layout_toLeftOf="@id/progressContainer"
        android:layout_marginTop="2dp"
        android:layout_below="@id/songTitle"
        android:layout_alignLeft="@id/songTitle"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:maxWidth="100dp"
        android:textColor="@color/reach_color"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:progress="0"
        android:secondaryProgress="100"
        android:max="100" />
</RelativeLayout>