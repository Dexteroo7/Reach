<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:paddingRight="12dp"
    android:paddingLeft="12dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/card_view"
        android:layout_marginBottom="-10dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp">
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image"
                fresco:placeholderImage="@drawable/playstore_2"
                fresco:placeholderImageScaleType="centerCrop"
                android:layout_width="match_parent"
                app:layout_heightPercent="60%" />
            <View
                android:background="@drawable/shadow_bottom"
                android:layout_width="match_parent"
                android:layout_below="@id/image"
                app:layout_heightPercent="1%" />
            <ImageView
                android:id="@+id/downButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_marginTopPercent="52%"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:src="@drawable/explore_download_btn" />
            <LinearLayout
                android:id="@+id/type"
                android:gravity="center_vertical"
                android:layout_below="@id/downButton"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/typeIcon"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/song_icon_gray_small"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
                <TextView
                    android:id="@+id/typeText"
                    android:text="Type"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/title"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="marquee"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Title Title"
                android:layout_below="@id/type"
                app:layout_marginTopPercent="1%"
                android:layout_centerHorizontal="true"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/subtitle"
                android:gravity="center"
                android:lines="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ellipsize="marquee"
                android:layout_below="@id/title"
                android:text="Subtitle"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/handle"
                android:gravity="center_vertical"
                app:layout_marginTopPercent="2%"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/subtitle"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/userImage"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/profile_pic_blue"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:id="@+id/userHandle"
                    android:text="handle"
                    android:textSize="16sp"
                    android:textColor="@color/reach_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.percent.PercentRelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>