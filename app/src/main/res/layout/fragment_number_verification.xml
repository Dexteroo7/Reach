<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:theme="@style/AppTheme">

    <ImageView
        android:id="@+id/reach_logo"
        android:background="@drawable/circular_background"
        android:src="@drawable/icon_plain"
        android:padding="15dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/numberVerificationPoster"
        android:src="@drawable/playstore_2"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/otherStuff"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/topPart"
            android:orientation="vertical"
            android:layout_width="match_parent"
            app:layout_heightPercent="70%" >
            <android.support.v4.view.ViewPager
                android:id="@+id/logo"
                android:paddingTop="30dp"
                android:paddingBottom="10dp"
                app:layout_heightPercent="90%"
                android:layout_width="match_parent">
            </android.support.v4.view.ViewPager>
            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/circles"
                android:layout_below="@id/logo"
                app:layout_heightPercent="10%"
                app:fillColor="@color/reach_color"
                app:pageColor="@color/white"
                app:strokeWidth="0dp"
                app:radius="7dp"
                android:layout_gravity="center"
                android:layout_width="match_parent" />
        </android.support.percent.PercentRelativeLayout>
        <FrameLayout
            android:id="@+id/bottomPart"
            android:layout_below="@id/topPart"
            app:layout_heightPercent="30%"
            android:background="#90000000"
            android:layout_width="match_parent" >
            <RelativeLayout
                android:id="@+id/bottomPart1"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <LinearLayout
                    android:id="@+id/verify"
                    android:orientation="horizontal"
                    android:background="@drawable/number_text_selector"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="NEXT"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/next_white"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/info"
                    android:layout_above="@id/verify"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/countrySpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="India(+91)"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:background="@drawable/edittext_white"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                    <View
                        android:layout_toRightOf="@id/countrySpinner"
                        android:id="@+id/dash"
                        android:background="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_width="5dp"
                        android:layout_height="2dp" />
                    <EditText
                        android:id="@+id/telephoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@id/dash"
                        android:layout_height="40dp"
                        android:textCursorDrawable="@null"
                        android:textColor="@color/white"
                        android:background="@drawable/edittext_white"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColorHint="#b2b2b2"
                        android:hint=" Phone No. "
                        android:inputType="numberSigned" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/whyAns"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_above="@id/info"
                    android:gravity="center"
                    android:text="You can share files with your phonebook contacts only"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/bottomPart2"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="Setting up your profile"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>
    </android.support.percent.PercentRelativeLayout>
</FrameLayout>
