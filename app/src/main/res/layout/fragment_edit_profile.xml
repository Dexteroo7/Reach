<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="reach.project.coreViews.EditProfileFragment">
    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >
        <android.support.v7.widget.Toolbar
            android:id="@+id/editProfileToolbar"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:navigationIcon="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/editProfilecontainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="30dp"
                android:id="@+id/profilePhotoContainer" >
                <ImageView
                    android:id="@+id/circle"
                    android:background="@drawable/abc"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/profilePhoto"
                    android:layout_margin="7dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/uploadText"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="Edit\nPhoto"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <EditText
                android:id="@+id/firstName"
                android:padding="10dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:minWidth="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/profilePhotoContainer"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/edittext_background"
                android:hint="Enter Name"
                android:inputType="textCapSentences"/>
            <Button
                android:id="@+id/editLibrary"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:background="@drawable/number_button_selector"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:text="Save Profile"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/mainShadow"
            android:layout_gravity="top"
            android:background="@drawable/shadow_toolbar"
            android:layout_width="match_parent"
            android:layout_height="3dp" />
        <ProgressBar
            android:indeterminate="true"
            android:id="@+id/loadingBar"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>
