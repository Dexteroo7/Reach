<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#BF000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/hand"
        android:layout_centerInParent="true"
        android:src="@drawable/coach_mark_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/arrows"
        android:layout_toLeftOf="@id/hand"
        android:layout_alignTop="@id/hand"
        android:rotation="180"
        android:src="@drawable/coach_mark_arrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/title"
        android:layout_below="@id/hand"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Let's swipe"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Swipe left to see trending stories among your friends"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>