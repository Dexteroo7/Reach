<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="reach.project.player.PlayerActivity">
    <ImageView
        android:id="@+id/headerRoot"
        android:scaleType="centerCrop"
        app:layout_heightPercent="35%"
        android:layout_width="match_parent"
        android:src="@drawable/album_art_small_03" />
    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbarLayout"
        app:elevation="0dp"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <android.support.v7.widget.Toolbar
            android:id="@+id/editProfileToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/abc_ic_ab_back_mtrl_am_alpha"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/profilePicContainer" >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/profilePic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:roundAsCircle="true"
            fresco:placeholderImage="@drawable/circular_background_pink" />
        <TextView
            android:id="@+id/editText"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="Change\nPhoto"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/profilePicContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/icon_photo_indicator_gray"
            android:layout_marginRight="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <TextView
            android:text="Change Cover"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp"
        app:layout_marginTopPercent="30%"
        app:layout_marginRightPercent="3%"
        app:layout_marginLeftPercent="3%"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/smallHeader"
                android:text="Edit Profile"
                android:textColor="@color/blue"
                android:background="@color/grey"
                android:gravity="center"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/nameText"
                android:text="NAME"
                android:paddingLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/smallHeader"
                android:textColor="@color/reach_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/name"
                android:textColor="#000"
                android:layout_alignLeft="@id/nameText"
                android:layout_below="@id/nameText"
                android:layout_width="wrap_content"
                android:minWidth="150dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="Enter Name"
                android:inputType="textCapSentences"/>
            <TextView
                android:id="@+id/handleText"
                android:text="HANDLE"
                android:paddingLeft="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/name"
                android:textColor="@color/reach_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/handle"
                android:textColor="#000"
                android:layout_alignLeft="@id/handleText"
                android:layout_below="@id/handleText"
                android:layout_width="wrap_content"
                android:minWidth="150dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="Enter Handle"
                android:inputType="textCapSentences"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.percent.PercentRelativeLayout>