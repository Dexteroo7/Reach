<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/reach_color</item>
        <item name="colorPrimaryDark">@color/reach_dark</item>
        <item name="colorAccent">@color/reach_color</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NumberVerificationTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/reach_color</item>
        <item name="colorPrimaryDark">@color/reach_dark</item>
        <item name="colorAccent">@color/reach_color</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner"/>

</resources>
